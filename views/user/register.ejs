<%- include('../campgrounds/header'); -%>

<div class="row">
    <h1 class="text-center">Register</h1>
    <div class="col-6 offset-3">
        <form action="/register" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input class="form-control" type="text" id="username" name="user[username]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
              
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">email</label>
                <input class="form-control" type="email" id="email" name="user[email]" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
              
            </div>
            <div class="mb-3">
                <label class="form-label" for="pw">Password</label>
                <input class="form-control" type="password" id="pw" name="user[password]" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
              
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Register</button>
            </div>
        </form>
    </div>
</div>
<%- include('../campgrounds/footer'); -%>
